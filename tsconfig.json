{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "lib",
		"target": "es2017",
        "module": "commonjs",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        // "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
	},
	"include": [
		"./core/*"
	],
	"exclude": ["node_modules"]
}
